#include<iostream>
using namespace std;

class Solution {
public:
    long long trappingWater(int arr[],int n) {
        int lmax = arr[0],rmax = arr[n-1],lpos = 1,rpos = n-2;
        long long water = 0;
        while(lpos <= rpos){
            if(arr[lpos] >= lmax)
                lmax = arr[lpos++];
            
            else if(arr[rpos] >= rmax)
                rmax = arr[rpos--];
            
            else if(lmax <= rmax && arr[lpos] < lmax)
                water += lmax - arr[lpos++];
                
            else
                water += rmax - arr[rpos--]; 
        }
        return water;
    }
};   
int main(){
        int n;
       
        cin >> n;
        
        int* a = new int[n];
        for(int i =0;i<n;i++){
            cin >> a[i];            
        }
        Solution obj;
        cout << obj.trappingWater(a, n) << endl;
        
    }
    
    return 0;
}
